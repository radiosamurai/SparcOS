#!/usr/bin/env bash
#
# Script name: configuring-emacs
# Description: Forces emacs to run through a configuration install after the SparcOS installer has completed
# GitLab: https://www.gitlab.com/SparcOS/SparcOS
# Contributors: Derek Taylor

killall emacs 
sleep 1
yes | /usr/bin/emacs --daemon
sleep 1
killall emacs
sleep 1
yes | /usr/bin/emacs --daemon
sleep 1
killall emacs
sleep 1
yes | /usr/bin/emacs --daemon
sleep 1
killall emacs
sleep 1
yes | /usr/bin/emacs --daemon
sleep 1

